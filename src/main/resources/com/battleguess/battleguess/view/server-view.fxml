<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml" fx:controller="com.battleguess.battleguess.controller.ServerController">
    <stylesheets>
        <URL value="@../css/styles.css" />
    </stylesheets>
    <HBox alignment="CENTER" spacing="10">
        <Label text="Port:" />
        <TextField fx:id="portField" promptText="Enter port (1024-65535)" />
    </HBox>
     <Button fx:id="createServerButton" onAction="#createServer" styleClass="button" text="Create Server" />
    <Label text="Active Servers" />
    <ListView fx:id="serverList" prefHeight="200" />
</VBox>
